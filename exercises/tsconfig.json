{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node"
    ],
    "exclude": [
      "node_modules",
      ".npm"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}
